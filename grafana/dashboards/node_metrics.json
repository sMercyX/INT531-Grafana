{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "datasource",
          "uid": "grafana"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "target": {
          "limit": 100,
          "matchAny": false,
          "tags": [],
          "type": "dashboard"
        },
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "id": 1,
      "title": "Golden Signals: Saturation & Traffic",
      "type": "row"
    },
    {
      "title": "CPU Saturation",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 1, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\", instance=\"$instance\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Memory Saturation",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 6, "y": 1, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=\"$instance\"} / node_memory_MemTotal_bytes{instance=\"$instance\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 85 },
              { "color": "red", "value": 95 }
            ]
          }
        }
      }
    },
    {
      "title": "Disk Saturation (Root)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 1, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\", instance=\"$instance\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\", instance=\"$instance\"})",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Network Traffic (Total)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 18, "y": 1, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{instance=\"$instance\"}[5m])) + sum(rate(node_network_transmit_bytes_total{instance=\"$instance\"}[5m]))",
          "legendFormat": "Total Throughput"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] }
        }
      }
    },
    {
      "gridPos": { "x": 0, "y": 5, "w": 24, "h": 1 },
      "id": 2,
      "title": "Resource Trends",
      "type": "row"
    },
    {
      "title": "CPU Usage Trend",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\", instance=\"$instance\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "fillOpacity": 10, "showPoints": "never" }
        }
      }
    },
    {
      "title": "Memory Usage Trend",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes{instance=\"$instance\"} / node_memory_MemTotal_bytes{instance=\"$instance\"})) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "fillOpacity": 10, "showPoints": "never" }
        }
      }
    },
    {
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 1 },
      "id": 3,
      "title": "Network & Disk I/O",
      "type": "row"
    },
    {
      "title": "Network Traffic (In/Out)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 0, "y": 15, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{instance=\"$instance\"}[5m])",
          "legendFormat": "Inbound {{device}}"
        },
        {
          "expr": "-rate(node_network_transmit_bytes_total{instance=\"$instance\"}[5m])",
          "legendFormat": "Outbound {{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "fillOpacity": 10 }
        }
      }
    },
    {
      "title": "Disk I/O Time",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "x": 12, "y": 15, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(node_disk_io_time_seconds_total{instance=\"$instance\"}[5m])",
          "legendFormat": "{{device}} IO Time"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["host", "golden-signals"],
